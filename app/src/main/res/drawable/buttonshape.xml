<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<!-- State when the button is pressed -->
<item android:state_pressed="true">
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">
        <corners
            android:radius="9dp"
            />
        <solid
            android:color="@color/denim"
            />
        <size
            android:width="270dp"
            android:height="60dp"
            />
        <!-- Define other shape properties if necessary -->
    </shape>
</item>

<!-- Default state -->
<item>
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">
        <corners
            android:radius="9dp"
            />
        <solid
            android:color="@color/bleucobalt"
            />
        <size
            android:width="270dp"
            android:height="60dp"
            />
        <!-- Define other shape properties if necessary -->
    </shape>
</item>

</selector>