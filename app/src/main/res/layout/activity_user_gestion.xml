<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:padding="15dp"
    tools:context="be.heh.kotlinproject_dstheh.UserGestionActivity"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="UseCompoundDrawables">
    <TextView
        android:id="@+id/tv_user_deconnexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/se_d_connecter"
        android:textColor="@color/colorstatelist"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginRight="20dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onUserClickManager"
        tools:ignore="OnClick,RtlHardcoded" />
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2"
        android:padding="16dp">
    </TableLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_gravity="center_horizontal"
        android:id="@+id/bt_user_materiel"
        android:text="@string/mat_riel"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:onClick="onUserClickManager"
        android:layout_marginBottom="20dp"
        tools:ignore="OnClick" />
</LinearLayout>